<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimaryLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerfil"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_redondo_pressed"
                android:src="@drawable/ic_photo_camera"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <LinearLayout
                android:id="@+id/layout_nombre"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:editable="false"
                    android:id="@+id/txtId"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="Id"
                    android:textColor="@color/primery_text"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:editable="false"
                    android:id="@+id/txtNombre"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:text="Nombre completo"
                    android:textColor="@color/primery_text"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/txtNumero"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:editable="false"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="Numero"
                    android:textColor="@color/primery_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:editable="false"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="abisurdiazramirez@gmail.com"
                    android:textColor="@color/primery_text"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotones"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/layout_nombre">

                <ImageButton
                    android:id="@+id/btnEliminar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_rubbish_bin"
                    android:background="@drawable/btn_redondo"/>

                <ImageButton
                    android:id="@+id/btnLlamar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/btnEliminar"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_call_answer"
                    android:background="@drawable/btn_redondo"/>

                <ImageButton
                    android:id="@+id/btnEmail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/btnLlamar"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_menu_send"
                    android:background="@drawable/btn_redondo"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>